{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "types": ["chrome"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@content/*": ["src/content/*"],
      "@background/*": ["src/background/*"]
    }
  },
  "include": ["src", "vite.config.ts", "vitest.config.ts", "scripts"]
}

