{
  "manifest_version": 3,
  "name": "Decision Fatigue Guard",
  "version": "0.1.0",
  "description": "Real-time Decision Load Score + privacy-first interventions + on-device overload prediction for Gmail.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}

